<h1>Jobs history</h1>
<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Customer</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
    <tr>
      <td><%= job.description %></td>
      <td><%= job.start_date %></td>
      <td><%= job.end_date %></td>
      <td><%= job.customer.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>